<?xml version='1.0' encoding='utf-8'?>
<widget id="com.apache.cordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <preference name="AndroidLaunchMode" value="singleTop" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <feature name="SpinnerPlugin">
        <param name="android-package" value="it.mobimentum.phonegapspinnerplugin.SpinnerPlugin" />
    </feature>
    <feature name="toast">
        <param name="android-package" value="org.apache.cordova.toast" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <name>Weather</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <preference name="SplashScreen" value="splashscreen" />
    <preference name="SplashScreenDelay" value="5000" />
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
</widget>
